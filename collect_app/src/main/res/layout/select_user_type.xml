<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Toolbar -->
    <!--<include layout="@layout/toolbar" /> -->

    <include
        layout="@layout/toolbar_action_bar_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar" />

    <LinearLayout
        android:id="@+id/main_menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <!--
            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:src="@drawable/ic_assignment_black_24dp" />-->

            <ImageView
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:src="@drawable/smt_icon_menu" />


        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal"
                    android:src="@drawable/logo_onic_nuevo200x200" />

                <Button
                    android:id="@+id/institucional_user_button"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@color/smt_green"
                    android:text="USUARIO INSTITUCIONAL"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Si perteneces a ONIC selecciona esta opción."
                    android:textColor="@color/primaryTextColor"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal"
                    android:src="@drawable/usuario_particular" />

                <Button
                    android:id="@+id/particular_user_button"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@color/smt_green"
                    android:text="USUARIO PARTICULAR"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Si no perteneces a ONIC selecciona esta opción."
                    android:textColor="@color/primaryTextColor"
                    android:textSize="15sp" />

            </LinearLayout>


        </ScrollView>



    </LinearLayout>


    <include
        layout="@layout/button_toback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>