<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/fondoxxxhdpi">


    <LinearLayout
        android:id="@+id/main_menuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingEnd="30dp"
        android:paddingRight="30dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="40dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            app:srcCompat="@drawable/smt_icon_menu" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SMT ONIC usa un canal seguro entre tu dispositivo y nuestro servidor. De esta manera tus datos no son expuestos a terceros mientras usas SMT-ONIC"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Estos datos serán compartidos solo con la Organización Nacional Indígena de Colombia ONIC."
                    android:textColor="@color/primaryTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Al continuar estas aceptando los "
                    android:textColor="@color/primaryTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/goto_termns_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:gravity="center"
                    android:linksClickable="true"
                    android:text="términos y condiciones"
                    android:textColor="@color/tintColor" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="de SMT ONIC."
                    android:textColor="@color/primaryTextColor"
                    android:textSize="12sp" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:contentDescription="@string/app_name"
                    android:padding="20dp"
                    app:srcCompat="@drawable/logo_onic_nuevo200x200" />

                <!--
                <Button

                    android:layout_width="200dp"
                    android:layout_height="10dp"
                    android:background="@color/smt_green"
                    android:padding="5dp"
                    android:text="banderas"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:layout_gravity="center" />-->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:srcCompat="@drawable/banderaonic"
                    android:layout_gravity="center"/>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>

    <Button
        android:id="@+id/accept_termns_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/smt_green"
        android:padding="10dp"
        android:text="ACEPTAR Y CONTINUAR"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal" />


</RelativeLayout>